ec-canvas {
  width: 100%;
  height: 100%;
}

.radarContainer{
  width: 100%;
  height: 500rpx;
  background: white;
}

.dropdown_icon{
  margin-left: 20rpx;
  margin-top: 10rpx;
  width: 42rpx;
  height: 42rpx;
}

.dropdown{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-right:30rpx;
}

.picker{
  display: flex;
  flex-direction: row;
  justify-content: left;
  font-size: 35rpx;
  font-style: bold;
  margin-left: 25rpx;
}

.divLine{
  background: #a8adad;
  height: 3rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
}

.lookButton{
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  height: 100rpx;
  width: 700rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  font-size: 40rpx;
  box-sizing: border-box;
  background-color: #009ACD;
  color: #fff;
}