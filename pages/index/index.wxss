/**index.wxss**/
page{
  background-color: rgb(255, 255, 255);
}
label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
/* pages/more/lostandfound/login/login.wxss */

.feedback_container {
  width: 750rpx;
  display: flex;
  justify-content: center;
}


.info_icon_container {
  width: 100%;
  height: 120rpx;
  padding-top: 8rpx;
}

.head_image {
  width: 108rpx;
  height: 108rpx;
}

.login_button {
  float: right;
  font-size: 26rpx;
  color: #f8f8f8;
}

.login_name {
  overflow: hidden;
  word-break: break-all;
}

.head_image_container {
  width: 108rpx;
  height: 108rpx;
  border-radius: 60rpx;
  overflow: hidden;
  float: left;
  border: 6rpx solid #f8f8f8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.more_container {
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: white;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.more_hd {
  width: 720rpx;
  color: #999;
  font-size: 13px;
  box-sizing: border-box;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding-top: 10rpx;
  line-height: 1;
}

.more_bd {
  width: 720rpx;
  box-sizing: border-box;
}

.item_container {
  border-top: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_hd_container {
  width: 40rpx;
  height: 40rpx;
}

.item_image {
  width: 40rpx;
  height: 40rpx;
}

.item_bd_container {
  padding-left: 10rpx;
  width: 610rpx;
  font-size: 34rpx;
}

.item_ft_container {
  width: 40rpx;
  height: 40rpx;
}
