/* pages/index/myclass.wxss */
.order_process {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  padding: 10rpx 10rpx 20rpx 10rpx;
  background-color: #fff;
}

.process_wrap {
  display: flex;
  flex-direction: row;
  flex: 1;
  align-items: center;
  height:3em;
}

.process {
  display: flex;
  align-items: center;
  width: 100%;
}

.process_icon {
  width: 50rpx;
  height: 50rpx;
}

.process_line {
  background: #eff3f6;
  flex: 1;
  height: 5rpx;
}

.process_title {
  font-size: 45rpx;
}
.process_zhangjie {
  font-size: 30rpx;
  color:rgb(177, 162, 162);
}
.process_danyuan {
  font-size: 24rpx;
  width:5em;
}