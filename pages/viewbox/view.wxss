/* pages/viewbox/view.wxss */

.weui-cells {
  text-align: left;
  background-color:black;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.aaa{
  display: flex;
  flex-direction:column;
  color: rgb(136, 119, 119);
  font-size:80%;
}
.function1{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 1em;
}

.function2{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 1em;
}

.weui-label {
  width: 5em;
}
.baseinfor{
  display: flex;
  flex-direction: row;
  justify-content:space-between
}
.keycard{
  width: auto;
  height:1.7em;
  color:#fff;
  line-height:1.7em;
  padding-left:10rpx;
  padding-right:10rpx; 
  margin-right: 10rpx;
  border-radius:10rpx;
  background:rgb(199, 199, 199);
  text-align: center;
}
.viewbox {
  display: flex;
  justify-content: center;
  flex-direction:column;
  background-color: black;
  align-items:center;
}

.button {
  height: 25px;
  width: 50px;
  background-color: rgba(247, 247, 247, 0.0);
    display: flex;
  flex-direction: row;
  justify-content: center;
}

.icon {
  height: 25px;
  width: 50px;
}

.input-style {
  width: 90%;
  height: 50px;
  border: 1px solid #ccc;
  margin: 10px auto;
}

.inforlist{
  margin: 15rpx;
  
}
.btn {
  width: 100%;
  margin: 5px ;
  display:flex;
  flex-direction:row;
}

.liuyanview {
  width: 90%;
  margin: 10px auto;
}

.result {
  text-align: center;
  font-size: 14px;
  color: #f00;
  margin-top: 20px;
}

.headimg {
  width: 750rpx;
  height: 45px;
  border-radius: 100%;
  display: flex;
}

.headimg image {
  width: 45px;
  height: 45px;
  border-radius: 100%;
}

.nickname_liuyantext {
  width: calc(100% - 55px);
  float: right;
  margin-top: -45px;
}

.nickname_liuyantext .nickname {
  font-size: 15px;
  color: #999;
}

.nickname_liuyantext .nickname .time {
  font-size: 11px;
  color: #999;
  float: right;
}

.nickname_liuyantext .text {
  font-size: 16px;
  color: #666;
}
